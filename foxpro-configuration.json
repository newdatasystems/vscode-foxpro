{
	"comments": {
		"lineComment": "*!*\t"
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
	"indentationRules": {
		"increaseIndentPattern": "^\\s*(DEFINE|FUNCTION|PROCEDURE|PROC|FUNC|FOR|IF|ELSE|TEXT|SCAN|TRY|CATCH|FINALLY|DO CASE|CASE|OTHERWISE|OTHER|DO WHILE)",
		"decreaseIndentPattern": "^\\s"
	}
}